<values>
    <!-- Boolean value -->
    <boolean id="boolean1">true</boolean>

    <!-- Float value -->
    <float id="float1">1.0</float>

    <!-- Integer value -->
    <int id="int1">1</int>

    <!-- Integer value referencing another value -->
    <int id="int2">int:int1</int>

    <!-- Duration value 120 milliseconds -->
    <duration id="duration1">120</duration>

    <!-- Duration value 10 seconds and 120 milliseconds -->
    <duration id="duration2">10.120</duration>

    <!-- Duration value 12 hours, 2 minutes, 30 seconds, 100 milliseconds -->
    <duration id="duration3">12:02:30.100</duration>

    <!-- Percentage value 50.12% -->
    <percent id="percent1">50.12%</percent>

    <!-- Percentage value 100% -->
    <percent id="percent2">100%</percent>

    <!-- Percentage value 10% -->
    <percent id="percent3">0.10</percent>

    <!-- Percentage value referencing another resource -->
    <percent id="percent4">percent:percent3</percent>
</values>