<fonts>
    <!-- Font files should be located in a folder named 'fonts' -->

    <!-- From ttf file -->
    <font id="test_12"
          size="12"
          color="#ffffff"
          borderWidth="5"
          borderColor="#ff0000">test.ttf</font>

